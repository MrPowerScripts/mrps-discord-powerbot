{
    "name": "mrps-powerbot",
    "version": "1.0.0",
    "description": "Discord bot for MrPowerScripts.com",
    "main": "bot.js",
    "homepage": "https://mrpowerscripts.com",
    "maintainers": [
        "MrPowerScripts"
    ],
    "author": "MrPowerScripts",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/mrpowerscripts/power-bot",
        "type": "git"
    },
    "dependencies": {
        "@ffmpeg-installer/ffmpeg": "^1.0.17",
        "discord.js": "^11.4.2",
        "espeak": "0.0.3",
        "ffmpeg-concat": "^1.0.11",
        "fluent-ffmpeg": "^2.1.2",
        "forever": "^0.15.3",
        "glob": "^7.1.3",
        "js-yaml": "^3.12.1",
        "lokijs": "^1.5.6",
        "npm": "^6.5.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.2",
        "video-stitch": "^1.6.0",
        "videoshow": "^0.1.11",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-register": "^6.26.0",
        "babel-runtime": "^6.26.0",
        "babel-watch": "^2.0.8"
    },
    "scripts": {
        "start": "NODE_ENV=prod npm run build && node bot.bin.js",
        "build": "babel bot.js -o bot.bin.js",
        "_dev_run": "NODE_ENV=dev node bot.bin.js",
        "_prod_run": "NODE_ENV=production forever start bot.bin.js",
        "watch-dev": "NODE_ENV=dev babel-watch bot.js && pkill node",
        "watch-prod": "NODE_ENV=prod babel-watch bot.js && pkill node",
        "prod": "npm run build && npm run _prod_run",
        "dev": "npm run build && npm run _dev_run",
        "stop": "forever stopall"
    }
}
